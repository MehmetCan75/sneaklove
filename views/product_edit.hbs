<div class="big-container product-manage-wrapper flexed-item">
  <form method="post" action="/prod-edit/{{sneakers._id}}" class="edit-product-form">
    <h3 class="form-title"> Edit Sneaker</h3>
    <div class="form-item-wrapper flexed-item">
      <label for="sneacker-name" class="label-name label">Model name</label>
      <input id="sneacker-name" name='name' type="text" class="input-text input" placeholder="Nike Air Max 90" value="{{sneakers.name}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneacker-ref" class="label-ref label">RÃ©f.</label>
      <input id="sneacker-ref" name='ref' type="text" class="input-text input" placeholder="ex: NV23498" value="{{sneakers.ref}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneacker-size" class="label-ref label">Size</label>
      <input id="sneacker-size" name='sizes' class="input-text input" placeholder="ex: 37" value="{{sneakers.sizes}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneacker-descr" class="label-descr label">Description</label>
      <input id="sneacker-descr" name='description' type="text" class="input-text input" placeholder="The better sneakers to run" value="{{sneakers.description}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneacker-price" class="label-price label">Price</label>
      <input id="sneacker-price" name='price' type="string" class="sneacker-price input" min="1" value="{{sneakers.price}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneacker-main-cat" class="label-main-cat label">Main category</label>
      <select id="main_category" name='category' class="select" required>
        <option value="-1" disabled selected>Choose main Category...</option>
        <option value="men">Men</option>
        <option value="women">Women</option>
        <option value="kids">Kids</option>
      </select>
    </div>
    <div class="form-item-wrapper flexed-item">
      <label class="label">Tags</label>
      {{> form_tags_select}}
    </div>
    <button class="button-primary add-sneacker-btn">Edit this sneaker</button>
  </form>
</div>